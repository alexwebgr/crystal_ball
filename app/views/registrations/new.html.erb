
<div class="row">
  <div class="col-8 offset-2">
    <h3>Register</h3>

    <div data-controller="toast">
      <%= form_with(model: User, url: registration_path) do |form| %>
        <div class="form-floating mb-3">
          <%= form.text_field :first_name, class: 'form-control', required: true %>
          <%= form.label :first_name %>
        </div>

        <div class="form-floating mb-3">
          <%= form.email_field :email_address, class: 'form-control', required: true %>
          <%= form.label :email_address %>
        </div>

        <div class="form-floating mb-3">
          <%= form.password_field :password, class: 'form-control', required: true %>
          <%= form.label :password %>
        </div>

        <div class="d-flex mb-3">
          <%= form.submit 'Register', class: 'btn btn-outline-primary ms-auto' %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<%= link_to "Log in", new_session_path %>

